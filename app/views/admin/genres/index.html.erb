<div class = "container">
  <div class = "row">
    <div class= "mt-4">
      <h4>ジャンル一覧•追加</h4>
      <div class="form-group">
        <%= form_with model: [:admin, @genre_new],url: admin_genres_path, method: :post ,local: true do |f| %>
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        <% end %>
      </div>
      <table class="table">
        <thead>
          <tr class = "table-secondary">
            <td class="text-center font-weight-bold">ジャンル</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|%>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class= "table">
      <thead>
        <tr class = "table-secondary">
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item|%>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name%></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <%# <%= item.is_active == true ? "販売中" : "販売停止中" %> 
              <% if item.is_active %>
                <span class="text-active">販売中</span>
              <% else %>
                <span class="text-active">販売停止中</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
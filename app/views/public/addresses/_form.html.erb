<%= form_with model: address, local: true do |f| %>
<%= render 'layouts/error_message', model: f.object %>
  <div class="field">
    <label>郵便番号（ハイフン無し）</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <label>住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <label>宛名</label>
    <%= f.text_field :name%>
    <%= f.submit submit, class: "btn btn-success"%>
  </div>
<% end %>
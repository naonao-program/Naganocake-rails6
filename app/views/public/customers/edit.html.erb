<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="col-md-2" style="background-color: #eeeeee; display: inline-block; padding:0 20px; font-weight: bold; margin:50px 0;" >会員情報編集</h4>
      <%= form_with model:@customer do |f|%>
        <div class="form-group" style="display: flex">
          <div class="col-md-2"><label>氏名</label></div>
          <div class="col-md-3"><%= f.text_field :last_name %></div>
          <div class="col-md-5"><%= f.text_field :first_name %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-md-2"><label>フリガナ</label></div>
          <div class="col-md-3"><%= f.text_field :last_name_kana %></div>
          <div class="col-md-5"><%= f.text_field :first_name_kana %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-md-2"><label>郵便番号</label></div>
          <div class="col-md-5"><%= f.text_field :post_code %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-md-2"><label>住所</label></div>
          <div class="col-md-5"><%= f.text_field :address, style:"width: 150%;" %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-md-2"><label>電話番号</label></div>
          <div class="col-md-5"><%= f.text_field :phone_number %></div>
        </div>
        <div class="form-group" style="display: flex">
          <div class="col-md-2"><label>メールアドレス</label></div>
          <div class="col-md-5"><%= f.text_field :email %></div>
        </div>
        <div  class="form-group" style="display: flex">
          <div class="col-md-5 offset-md-2"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
          <div class="col-md-4"><%= link_to "退会する ", unsubscribe_customers_path, class: "btn btn-danger" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
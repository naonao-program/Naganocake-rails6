<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="col-md-2 bg-" style="background-color: #eeeeee; display: inline-block; padding:0 20px; font-weight: bold; margin:50px 0;" >マイページ</h4>
      <div class="form-group" style="display: flex">
          <h5 class="col-md-2 pt-2" style="font-weight: bold;">登録情報</h5>
          <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %>
      </div>
      <!--会員情報-->
      <table border="1" style="margin:10px;">
       <tr>
         <th style="padding: 15px 10px; background-color: #eeeeee;">氏名</th>
         <td style="padding: 15px 10px;"><%= @customer.last_name %> <%=@customer.first_name%></td>
       </tr>
       <tr>
         <th style="padding: 15px 10px; background-color: #eeeeee;">カナ</th>
         <td style="padding: 15px 10px;"><%= @customer.last_name_kana %> <%=@customer.first_name_kana%></td>
       </tr>
       <tr>
         <th style="padding: 15px 10px; background-color: #eeeeee;">郵便番号</th>
         <td style="padding: 15px 10px;"><%= @customer.post_code %></td>
       </tr>
       <tr>
         <th style="padding: 15px 10px; background-color: #eeeeee;">住所</th>
         <td style="padding: 15px 10px;"><%= @customer.address %></td>
       </tr>
       <tr>
         <th style="padding: 15px 10px; background-color: #eeeeee;">電話番号</th>
         <td style="padding: 15px 10px;"><%= @customer.phone_number %></td>
       </tr>
       <tr>
         <th style="padding: 15px 10px; background-color: #eeeeee;">メールアドレス</th>
         <td style="padding: 15px 10px;"><%= @customer.email %></td>
       </tr>
      </table>
      <%# ページ下部 %>
      <div class="form-group" style="display: flex">
        <h5 class= "col-md-2 pt-2">パスワード変更</h5>
        <a class="btn btn-primary text-light">変更</a>
      </div>
      <div class="form-group" style="display: flex">
        <h5 class= "col-md-2 pt-2">配送先</h5>
        <a class="btn btn-primary text-light">一覧を見る</a>
      </div>
      <div class="form-group" style="display: flex">
        <h5 class= "col-md-2 pt-2">注文履歴</h5>
        <a class="btn btn-primary text-light">一覧を見る</a>
      </div>
    </div>
  </div>
</div>
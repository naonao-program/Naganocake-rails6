<div class="container">
  <div class="row">
    <section class="inner">
      <h3>注文情報確認</h3>
      <table class= "table table table-bordered">
        <thead>
          <tr>
            <td>商品名</td>
            <td>単価(税込み)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
          <% @sum = 0%>
          <% @cart_items.each do |cart_item|%>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s %></td>
            <td><%= cart_item.amount %></td>
            <td><%= @sum +=  cart_item.item.with_tax_price.to_i * cart_item.amount.to_i %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </section>
    <section>
      <table class= "table table table-bordered">
        <tr>
          <td>送料</td>
        </tr>
        <tr>
          <td>商品合計</td>
        </tr>
        <tr>
          <td>請求金額</td>
        </tr>
      </table>
    </section>
  </div>
</div>
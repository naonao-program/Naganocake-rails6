<div class = "container">
  <div class="row">
    <div class="sidebar">
      <h3>ジャンル検索</h3>
    </div>
    <div class="content">
      <div class="flex">
        <%= image_tag @item.image, size: '400x300' %>
        <h2><%= @item.name %></h2>
        <h4><%= @item.introduction %></h4>
        ¥<%= @item.with_tax_price.to_s %>(税込)
        <%# formでカート入れるための個数選択と送信ボタン %>
        <%= form_with model: [@cart] , url: cart_items_path, method: :post, local: true do |f| %>
          <%= f.hidden_field :item_id, value:@item.id %>
          <%= f.select :amount, [*(1..10)], {include_blank: "個数選択"} %>
          <%= f.submit "カートに入れる", class: "btn btn-success"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
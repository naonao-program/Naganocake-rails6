<div class="container">
  <div class="row">
    <div class ="col-10 mt">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-2">
      <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, class: 'btn btn-danger', data: {confirm: "削除しますか？"} %>
    </div>
    <table class="table table table-bordered">
      <thead class = "">
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @sum = 0 %>
        <% @carts.each do |cart| %>
          <tr>
            <td>
              <%= image_tag cart.item.image, size: '80x50'%>
              <%= cart.item.name %>
            </td>
            <td>
              <%= cart.item.with_tax_price.to_s %>
            </td>
            <td>
              <%= form_with model: cart, url: cart_item_path(cart), method: :patch, local: true do |f| %>
                <%= f.select :amount, [*(1..10)] %>
                <%= f.submit '変更', class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <%= cart.item.with_tax_price.to_i * cart.amount.to_i%>
              <% @sum += cart.item.with_tax_price.to_i * cart.amount.to_i%>
            </td>
            <td>
              <%= link_to '削除する', cart_item_path(cart), method: :delete, class: "btn btn-danger",  data: {confirm: "削除しますか？"} %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
    <div class="col-8">
      <%= link_to '買い物を続ける', root_path, class: "btn btn-primary"%>
    </div>
    <div class="col-3">
      <table class="table table-borderd">
        <tbody>
          <tr>
            <th class="table-active">合計金額</th>
            <td><%= @sum %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-6 text-right mt-4">
      <%= link_to '情報入力へ進む', new_order_path, class: "btn btn-success"%>
    </div>
  </div>
</div>